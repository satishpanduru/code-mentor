{
  "manifest_version": 3,
  "name": "LeetCode Mentor",
  "version": "1.1",
  "description": "Get coding hints while solving LeetCode problems.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://leetcode.com/problems/*"],
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/problems/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
}
